{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/electron/electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run copy-electron",
    "copy-electron": "mkdir -p dist/electron && cp src/electron/electron.cjs dist/electron/electron.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:electron": "npm run build && electron ./dist/electron/electron.cjs",
    "build:electron": "npm run copy-electron && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.3",
    "@mui/material": "^6.4.3",
    "@mui/types": "^7.2.21",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "html2canvas": "^1.4.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.5",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.itm8.salestool",
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      "public/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "public/logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
